<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context="com.ridhs.myparkingbuddy.WelcomeScreen">


    <TextView
        android:id="@+id/activity_welcomescreen_tv_Welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="114dp"
        android:text="Welcome!"
        android:textColor="#01635b"
        android:fontFamily="sans-serif-smallcaps"
        android:textSize="40dp" />

    <Button
        android:id="@+id/activity_welcomescreen_LoginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="141dp"
        android:background="@color/colorPrimary"
        android:fadingEdgeLength="100dp"
        android:paddingLeft="37dp"
        android:paddingRight="37dp"
        android:text="@string/action_login"
        android:fontFamily="sans-serif-smallcaps"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:layout_below="@+id/activity_welcomescreen_tv_Welcome"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/activity_welcomescreen_RegisterButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="@string/action_register"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:layout_marginRight="35dp"
        android:layout_marginEnd="35dp"
        android:layout_alignBaseline="@+id/activity_welcomescreen_LoginButton"
        android:layout_alignBottom="@+id/activity_welcomescreen_LoginButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>