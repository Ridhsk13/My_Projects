<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ridhs.bookmyhall.HallDescription">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">


            <ImageView
                android:id="@+id/hall_desc_imageView_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/placeholder" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/hall_desc_textView_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="Description of the hall. Basic information of hall."
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/hall_desc_editText_admin_hall_description"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Hall Description"
                    android:visibility="gone" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/hall_desc_imageView_ex1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:src="@drawable/placeholder" />

                <ImageView
                    android:id="@+id/hall_desc_imageView_ex2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:src="@drawable/placeholder" />

                <ImageView
                    android:id="@+id/hall_desc_imageView_ex3"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:src="@drawable/placeholder" />

                <ImageView
                    android:id="@+id/hall_desc_imageView_ex4"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:src="@drawable/placeholder" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:gravity="center"
                    android:text="Features:"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/hall_desc_imageView_admin_edit_features"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:scaleX=".4"
                    android:scaleY=".4"
                    android:src="@drawable/edit_48" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/hall_desc_linearLayout_features"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Floor Area :"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Capacity :"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/hall_desc_textView_floor_area"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="200"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/hall_desc_textView_capacity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="50"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/hall_desc_linearLayout_admin_features"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Floor Area :"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/hall_desc_editText_admin_floor_area"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Capacity :"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/hall_desc_editText_admin_capacity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Feature value"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/hall_desc_linearLayout_admin_edit_features"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:id="@+id/hall_desc_linearLayout_admin_edit_features_sub_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:visibility="gone"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/hall_desc_editText_admin_feature_key_1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:hint="Feature title"
                                android:textSize="16sp" />

                            <EditText
                                android:id="@+id/hall_desc_editText_admin_feature_value_1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:hint="Feature value"
                                android:textSize="16sp" />

                            <ImageView
                                android:id="@+id/hall_desc_imageView_admin_delete_feature_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:adjustViewBounds="true"
                                android:scaleType="centerCrop"
                                android:scaleX=".5"
                                android:scaleY=".5"
                                android:src="@drawable/delete_48" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/hall_desc_linearLayout_admin_edit_features_sub_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <EditText
                                android:id="@+id/hall_desc_editText_admin_feature_key_2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:hint="Feature title"
                                android:textSize="16sp" />

                            <EditText
                                android:id="@+id/hall_desc_editText_admin_feature_value_2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:hint="Feature value"
                                android:textSize="16sp" />

                            <ImageView
                                android:id="@+id/hall_desc_imageView_admin_delete_feature_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:adjustViewBounds="true"
                                android:scaleType="centerCrop"
                                android:scaleX=".5"
                                android:scaleY=".5"
                                android:src="@drawable/delete_48" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/hall_desc_linearLayout_admin_edit_features_sub_3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <EditText
                                android:id="@+id/hall_desc_editText_admin_feature_key_3"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:hint="Feature title"
                                android:textSize="16sp" />

                            <EditText
                                android:id="@+id/hall_desc_editText_admin_feature_value_3"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:hint="Feature value"
                                android:textSize="16sp" />

                            <ImageView
                                android:id="@+id/hall_desc_imageView_admin_delete_feature_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:adjustViewBounds="true"
                                android:scaleType="centerCrop"
                                android:scaleX=".5"
                                android:scaleY=".5"
                                android:src="@drawable/delete_48" />
                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Button
                            android:id="@+id/hall_desc_admin_add_hall_submit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Submit"
                            android:visibility="gone" />

                        <Button
                            android:id="@+id/hall_desc_admin_add_hall_feature"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:layout_weight="1"
                            android:text="Add More"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/hall_desc_linearLayout_admin_extra_feature_display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Projector :"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:text="Yes"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    android:gravity="top"
                    android:text="Address :"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/hall_desc_textView_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="E. H. Hereford University Center 300 W First St, Arlington,TX 76010"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/hall_desc_editText_admin_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="2"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:gravity="center"
                    android:text="Reviews:"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/hall_desc_imageView_admin_edit_reviews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:scaleX=".4"
                    android:scaleY=".4"
                    android:src="@drawable/edit_48" />
            </LinearLayout>

            <TextView
                android:id="@+id/hall_desc_textView_review_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                android:text=" &quot; No Reviews available &quot;"
                android:textSize="16sp"
                android:textStyle="italic" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/hall_desc_textView_admin_review_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text=" &quot; Organized a freshers party here. The place is huge! Definitely I'd recommend this place to one and all!!  &quot;"
                    android:textSize="16sp"
                    android:textStyle="italic" />

                <ImageView
                    android:layout_alignParentRight="true"
                    android:id="@+id/hall_desc_imageView_admin_delete_review_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-20dp"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:scaleX=".4"
                    android:scaleY=".4"
                    android:src="@drawable/delete_48" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/hall_desc_textView_admin_review_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text=" &quot; Big,huge,majestic! Has all the festures one can think of!!  &quot;"
                    android:textSize="16sp"
                    android:textStyle="italic" />

                <ImageView
                    android:layout_alignParentRight="true"
                    android:id="@+id/hall_desc_imageView_admin_delete_review_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-20dp"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:scaleX=".4"
                    android:scaleY=".4"
                    android:src="@drawable/delete_48" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/hall_desc_textView_admin_review_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text=" &quot; I feel it's okayish. Not so great!  &quot;"
                    android:textSize="16sp"
                    android:textStyle="italic" />

                <ImageView
                    android:layout_alignParentRight="true"
                    android:id="@+id/hall_desc_imageView_admin_delete_review_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-20dp"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:scaleX=".4"
                    android:scaleY=".4"
                    android:src="@drawable/delete_48" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/hall_desc_imageView_review_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:visibility="gone"
                android:scaleX=".4"
                android:scaleY=".4"
                android:src="@drawable/edit_48" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="More...."
                android:textSize="16sp" />

            <Button
                android:id="@+id/hall_desc_button_admin_edit_hall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:text="Edit Hall" />

            <Button
                android:id="@+id/hall_desc_button_admin_delete_hall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Delete Hall" />

            <Button
                android:id="@+id/hall_desc_button_admin_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Submit"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
