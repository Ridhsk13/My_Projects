<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="4dp"
        android:paddingRight="4dp"
        android:paddingLeft="4dp"
        android:paddingBottom="8dp"
        android:background="@drawable/scrollview_border"
        >
        <TextView
            android:layout_width="140dp"
            android:layout_height="130dp"
            android:text="Classic Switches"
            android:textSize="12dp"
            android:textAlignment="gravity"
            android:gravity="center_horizontal"
            android:paddingTop="110dp"
            android:background="@drawable/ring_1"
            android:id="@+id/frag_grid_text"
            android:textStyle="bold"

            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="View More"
            android:textColor="@color/border"
            android:textSize="12dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textAllCaps="false"
            android:layout_centerHorizontal="true"
            android:id="@+id/frag_grid_button"
            android:background="@drawable/button_press_state_change"
            android:layout_below="@id/frag_grid_text"
            />

    </RelativeLayout>
</RelativeLayout>
